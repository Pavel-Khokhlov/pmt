---
import faqs from "@d/dataFaqs.js";
---

<section class="section _faq" id="faq">
  <h2 class="section__title _black">Вопрос - Ответ</h2>
  <ul class="faq__wrapper">
    {
      faqs.map((faq, index) => {
        return (
          <li class="faq__item">
            <p class="faq__text question">{faq.question}</p>
            <p class="faq__text answer">{faq.answer}<span class="faq__data">{faq.time}</span></p>
          </li>
        );
      })
    }
  </ul>
</section>

<style lang="sass" is:global>
  .section
    &._faq
      box-sizing: border-box
      background-color: var(--color-white-smoke)
      padding: min(50px, 5vw) min(200px, 4vw)
    &._about
      width: min(1024px, 90vw)
      margin: 0 auto
      box-sizing: border-box
      background-color: var(--color-floral)
    &__title
      &._black
        color: var(--color-black)
  .faq
    &__wrapper
      width: min(1000px, 100%)
      margin: 0 auto min(50px, 8vw)
      list-style: none
      padding: 0
      display: flex
      flex-direction: column
      gap: min(30px, 3vw)
      box-sizing: border-box
    &__item
      display: flex
      flex-direction: column
      gap: min(30px, 3vw)
    &__text
      font-weight: 400
      line-height: 1.3
      position: relative
      padding: min(10px, 2vw) min(15px, 3vw)
      &.question
        max-width: min(700px, 60vw)
        border-radius: 12px 12px 12px 0
        margin: 0 0 0 min(20px, 3vw)
        font-size: min(24px, 4vw)
        font-weight: 500
        line-height: 1.2
        color: var(--color-white)
        background: var(--gd-brown)
        &::before
          content: ''
          position: absolute
          bottom: 0
          left: max(-20px, -3vw)
          width: min(20px, 3vw)
          height: min(20px, 3vw)
          background-color: #392D69
        &::after
          content: ''
          position: absolute
          bottom: 0
          left: max(-20px, -3vw)
          width: min(20px, 3vw)
          height: min(20px, 3vw)
          background-color: var(--color-white-smoke)
          border-radius: 0 0 min(20px, 3vw) 0
          border: none
      &.answer
        position: relative
        max-width: min(900px, 80vw)
        border-radius: 12px 12px 0 12px
        margin: 0 min(20px, 3vw) 0 0
        padding-bottom: min(15px, 3vw)
        align-self: flex-end
        background-color: var(--color-white)
        font-size: min(20px, 3.5vw)
        font-weight: 400
        line-height: 1.4
        color: var(--color-black)
        &::before
          content: ''
          position: absolute
          bottom: 0
          right: max(-20px, -3vw)
          width: min(20px, 3vw)
          height: min(20px, 3vw)
          background-color: var(--color-white)
        &::after
          content: ''
          position: absolute
          bottom: 0
          right: max(-20px, -3vw)
          width: min(20px, 3vw)
          height: min(20px, 3vw)
          background-color: var(--color-white-smoke)
          border-radius: 0 0 0 min(20px, 3vw)
          border: none
    &__data
      position: absolute
      bottom: 3px
      right: 8px
      font-size: min(14px, 2.5vw)
      font-weight: 400
      line-height: 1.2
      color: var(--color-brown)
</style>
